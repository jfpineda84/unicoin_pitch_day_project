<body class="snail">
  <center>
  <div class="logo">
  <%= image_tag("unicoinlatest.png") %>
  </div>
</center>

<center>
  <div class="homepage-login">
    <h1 style="font-family: American Typewriter">Member Login</h1>
<%= form_tag '/login' do %>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Login" %><br><br>
  <%= link_to "Don't have an account? Sign up!", register_path %>
</div>

<% end %>
</center>
</body>
